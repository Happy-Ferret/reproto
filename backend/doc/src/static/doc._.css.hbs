/* vim: ft=css
 */

* {
  box-sizing: border-box;
}

body {
  background-color: {{background_color}};
  font-family: {{font_family}};
  font-size: {{font_size}};
}

section {
    margin: 10px;
}

nav.top {
    font-size: 18px;
    margin: 10px;
}

div.field {
    margin-left: 10px;
}

.name-part {
    color: {{name_part_color}};
}

/* separator in a name */
.name-sep {
    color: {{name_part_color}};
}

/* the last, most significant part of a name */
.name-local {
}

/* a primitive type */
.type-primitive {
    color: {{primitive_color}};
}

.kind {
    color: {{keyword_color}};
}

.keyword {
    color: {{keyword_color}};
}

.description {
    margin-left: 10px;
}

.missing-description {
    margin-left: 10px;
    font-style: italic;
}

.description h1 {
    font-size: {{description_h1_size}};
}

.description h2 {
    font-size: {{description_h2_size}};
}

.description h3 {
    font-size: {{description_h3_size}};
}

.description h4 {
    font-size: {{description_h4_size}};
}
