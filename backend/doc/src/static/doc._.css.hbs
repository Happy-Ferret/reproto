/* vim: ft=css
 */

h1, h2, h3, h4, h5, h6 {
    color: {{heading_color}};
}

body {
    background-color: {{background_color}};
    font-family: {{fonts}};
    font-size: 1em;
    padding:0;
    margin:0;
}

a {
    color: {{link_color}};
    text-decoration: none;
}

@media only screen and (min-width: 800px) {
    .grid-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 300px 1fr;
        grid-gap: {{margin}};
    }
}

.grid-container {
    margin-top: -{{margin}};
    padding: 0 {{margin}};
    min-width: 400px;
    background-color: {{bg}};
}

.grid-overview {
}

.grid-decls {
}

.grid-container .section-content {
    padding: 0;
}

.grid-container .section-body {
    padding: 0 {{margin}};
}

